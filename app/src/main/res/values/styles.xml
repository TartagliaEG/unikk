<resources>

  <!-- Base application theme. -->
  <style name="UnikkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/main_bg</item>
    <item name="colorPrimaryDark">@color/main_bg_strong</item>
    <item name="colorAccent">@color/main_bg_suave</item>
  </style>

  <!-- Base application theme without action bar. -->
  <style name="UnikkThemeNoActionBar" parent="UnikkTheme">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="UnikkTextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
    <!-- Hint color and label color in FALSE viewModel -->
    <item name="android:textColorHint">@color/main_tx</item>
    <item name="android:textSize">20sp</item>
    <!-- Label color in TRUE viewModel and bar color FALSE and TRUE State -->
    <item name="colorAccent">@color/main_tx_strong</item>
    <item name="colorControlNormal">@color/main_tx_strong</item>
    <item name="colorControlActivated">@color/main_tx_strong</item>
  </style>

  <style name="SplashTheme" parent="UnikkTheme">
    <item name="android:windowBackground">@drawable/bg_splash_screen</item>
  </style>


</resources>
